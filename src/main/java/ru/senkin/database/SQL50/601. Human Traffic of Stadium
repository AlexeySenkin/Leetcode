/* Write your T-SQL query statement below */
    SELECT DISTINCT s1.*
    FROM Stadium s1
        INNER JOIN Stadium s2 ON (s2.id = s1.id + 1 OR s2.id = s1.id - 1) AND s2.people>=100
        INNER JOIN Stadium s3 ON (s3.id = s2.id + 1 OR s3.id = s2.id - 1) AND s3.id <> s1.id AND s3.people>=100
    WHERE s1.people>=100
    UNION
    SELECT DISTINCT s1.*
    FROM Stadium s1
        INNER JOIN Stadium s2 ON s2.id = s1.id -1 AND s2.people>=100
        INNER JOIN Stadium s3 ON s3.id = s1.id + 1 AND s3.id <> s1.id AND s3.people>=100
    WHERE s1.people>=100